<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.customcomponent.MainActivity">

    <com.example.customcomponent.EditTextWithClear
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/editTextWithClear"
        my:isClearBtnInvisibility="true"
        my:myStyle="classic"
        my:iconIvBackground="@mipmap/ic_launcher"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/popupBtn"
        android:text="自定义PopupWindow"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeConsumingTv"
        android:text="耗时"
        android:visibility="gone"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:divider="@null"/>
    <ViewStub
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/empty_layout"
        android:id="@+id/viewStub"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pullToRefreshListView"
        android:divider="@null"
        ptr:ptrAnimationStyle="rotate"
        ptr:ptrDrawable="@mipmap/ic_launcher"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="刷新"
        android:id="@+id/refreshBtn"/>
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/expandableListView"
        android:groupIndicator="@null"
        android:divider="@null"
        android:childDivider="@null"
        android:visibility="gone"/>
    <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pullToRefreshExpandableListView"/>
</LinearLayout>
